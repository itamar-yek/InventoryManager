# =============================================================================
# Environment Variables for Inventory Manager
# =============================================================================
# Copy this file to .env and customize for your deployment.
# Never commit .env to version control!

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=inventory

# Full connection string (used by backend)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@db:5432/inventory

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# IMPORTANT: Generate a secure secret key for production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-in-production-use-a-real-secret-key

# JWT token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
# Set to false in production
DEBUG=false

# Allowed CORS origins (comma-separated, or * for all)
ALLOWED_HOSTS=*

# -----------------------------------------------------------------------------
# Deployment Settings
# -----------------------------------------------------------------------------
# Port for frontend (default: 80)
FRONTEND_PORT=80

# -----------------------------------------------------------------------------
# Upload Configuration
# -----------------------------------------------------------------------------
# Directory for file uploads (relative to backend or absolute path)
UPLOAD_DIR=./uploads

# -----------------------------------------------------------------------------
# Development Settings (for local development only)
# -----------------------------------------------------------------------------
# Frontend dev server port
VITE_DEV_PORT=3000

# Backend API URL for frontend dev proxy
VITE_API_URL=http://localhost:8000
